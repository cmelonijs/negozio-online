generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  category    String
  description String?
  images      String[]
  price       Float
  brand       String
  rating      Float
  numReviews  Int
  stock       Int
  isFeatured  Boolean
  banner      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
